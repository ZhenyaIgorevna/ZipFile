<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.bsu.entities.user.User" table="users" catalog="test">
        <id name="login" type="string">
            <column name="login" length="100" not-null="true" />
            <generator class="assigned" />
        </id>
        <property name="password" type="string">
            <column name="password" length="100" not-null="true" />
        </property>
        <property name="enabled" type="boolean">
            <column name="enabled" not-null="true" />
        </property>
        <property name="role" type="org.hibernate.type.EnumType">
            <column name="role" not-null="true" length="10"/>
        </property>
    </class>
</hibernate-mapping>